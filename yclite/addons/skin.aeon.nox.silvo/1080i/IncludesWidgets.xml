<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="VerticalMenuWidgetBackground">
		<param name="background_left"/>
		<param name="background_top"/>
		<param name="background_width" default="1496"/>
		<param name="background_height"/>
		<definition>
			<control type="image">
				<left>$PARAM[background_left]</left>
				<top>$PARAM[background_top]</top>
				<width>$PARAM[background_width]</width>
				<height>$PARAM[background_height]</height>
				<texture border="40">dialogs/default/bg2.png</texture>
			</control>
		</definition>
	</include>
	<include name="PanelStyleWidgets">
		<param name="panel_width"/>
		<param name="panel_height"/>
		<param name="panel_onleft" default="9000"/>
		<param name="panel_onright"/>
		<definition>
			<width>$PARAM[panel_width]</width>
			<height>$PARAM[panel_height]</height>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<onleft>$PARAM[panel_onleft]</onleft>
			<onright>$PARAM[panel_onright]</onright>
			<onback>9000</onback>
			<orientation>horizontal</orientation>
			<preloaditems>2</preloaditems>
			<scrolltime tween="quadratic" easing="out">300</scrolltime>
		</definition>
	</include>
</includes>